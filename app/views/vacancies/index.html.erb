<p id="notice"><%= notice %></p>

<h1>Vacancies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start date</th>
      <th>Salary min</th>
      <th>Salary max</th>
      <th>Location</th>
      <th>Bounty</th>
      <th>Available position</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vacancies.each do |vacancy| %>
      <tr>
        <td><%= vacancy.title %></td>
        <td><%= vacancy.description %></td>
        <td><%= vacancy.start_date %></td>
        <td><%= vacancy.salary_min %></td>
        <td><%= vacancy.salary_max %></td>
        <td><%= vacancy.location %></td>
        <td><%= vacancy.bounty %></td>
        <td><%= vacancy.available_position %></td>
        <td><%= vacancy.active %></td>
        <td><%= link_to 'Show', vacancy %></td>
        <td><%= link_to 'Edit', edit_vacancy_path(vacancy) %></td>
        <td><%= link_to 'Destroy', vacancy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

